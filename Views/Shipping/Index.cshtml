@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Shipping";
}

<div class="card flex-fill shadow-sm border-0 rounded-4 overflow-hidden">
    <div class="card-header d-flex flex-wrap justify-content-between align-items-center">
        <h1 class="h4 mb-0">Shipping</h1>
        <a href="/Shipping/Create" class="btn btn-primary d-flex align-items-center">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none"
                stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                class="feather feather-plus me-1">
                <line x1="12" y1="5" x2="12" y2="19"></line>
                <line x1="5" y1="12" x2="19" y2="12"></line>
            </svg>
            Create New Shipping Record
        </a>
    </div>
    <div class="card-body">
        <input type="text" class="form-control mb-3" placeholder="Search...">
        <table class="table table-hover table-striped mb-0 table-responsive rounded-3 overflow-hidden">
            <thead class="table-light rounded-top-3">
                <tr class="text-center">
                    <th>SO Number</th>
                    <th>Destination</th>
                    <th>Date</th>
                    <th>Total DO</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var shipping in Model)
                {
                    <tr class="text-center">
                        <td>@shipping.SONumber</td>
                        <td>@shipping.Destination</td>
                        <td>@shipping.Date.ToString("yyyy-MM-dd")</td>
                        <td>@shipping.TotalDO</td>
                        <td class="d-flex flex-wrap justify-content-center gap-2">
                            <a asp-controller="Shipping" asp-action="Edit" asp-route-id="@shipping.SOId"
                                class="btn btn-sm btn-warning">
                                Detail
                            </a>
                            
                            <a asp-controller="Shipping" asp-action="Delete" asp-route-id="@shipping.SOId"
                                class="btn btn-sm btn-danger">
                                Delete
                            </a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
